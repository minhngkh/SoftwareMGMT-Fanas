{{#content "css" mode="append"}}
<link rel="stylesheet" href="/css/detail.css">
{{/content}}

{{#content "js" mode="append"}}
<script src="/js/detail.js"></script>
{{/content}}

<div class="app_body">
    <div class="detail_header">
        <div class="header_info">
            <a href="/homepage">
                <div class="icon">
                    <span><i class="fa-solid fa-arrow-left"></i></span>
                    <span><i class="fa-solid fa-share-nodes"></i></span>
                </div>
            </a>
        </div>
    </div>
    <div class="detail_body">
        <div class="box-temp3">
            <div class="info_book">
                {{!-- <img src="assets/img/nna.jpg" alt=""> --}}
                <img src="{{detail.coverPath}}" alt="">
                {{!-- <h4>Cô gái tới từ hôm qua</h4> --}}
                <h4>{{detail.bookName}}</h4>
                {{!-- <span class="actor">Nguyễn Nhật Ánh</span> --}}
                <span class="actor">{{author.name}}</span>
            </div>
            <div class="header_like">
                <i class="fa-regular fa-heart non-heart"></i>
                <i class="fa-solid fa-heart heart"></i>
                <span>Nghe chương đầu miễn phí</span>
            </div>
            <div class="header_cost">
                <div class="header_cost-info">
                    <span>Giá bán lẻ</span>
                    <span>
                        99,999đ
                        {{!-- {{price}} --}}
                        <label class="custom-checkbox">
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </span>
                </div>
                <div class="header_cost-box">
                    <span>Mua với giá bán lẻ-99,999đ</span>
                    {{!-- <span>Mua với giá bán lẻ-{{price}}</span> --}}
                </div>
            </div>
        </div>
        <div class="footer-info" id="footer-info">
            <h3>Giới thiệu nội dung</h3>
            <p>{{detail.description}}</p>
            <h4>Về tác giả</h4>
            <div class="box-info">
                {{!-- <img src="assets/img/nnaimg.jpg" alt="" width="71" height="71"> --}}
                <img src="{{author.avatarPath}}" alt="" width="71" height="71">
                <div class="name-au">
                    <h5>{{author.name}}</h5>
                    <span>{{author.bookList.length}} Sách</span>
                </div>
            </div>
            <p>
                {{author.description}}
                {{!-- Nguyễn Nhật Ánh (sinh ngày 7 tháng 5 năm 1955) 
                là một nhà văn người Việt Nam. Được xem là một
                trong những nhà văn hiện đại xuất sắc nhất Việt Nam hiện nay,
                ông được biết đến qua nhiều tác phẩm văn học về đề tài tuổi trẻ.
                Nhiều tác phẩm của ông được độc giả và giới chuyên môn đánh giá cao,
                đa số đều đã được chuyển thể thành phim --}}
            </p>
            <h4>Thông tin xuất bản</h4>
            <p>Nhà xuất bản sách giấy NXB trẻ</p>
            <div class="box-temp1">
                {{#each detail.genres}}
                <span class="ctg">{{this}}</span>
                {{/each}}
            </div>
            {{!-- <h4>Thông tin cần đọc</h4>
            <p>Cần thêm thông tin</p> --}}
            <span class="underline"></span>
            <div style="width: 100%; padding:20px;">
                <div class="box-temp2">
                    <img src="{{detail.coverPath}}" alt="" width="103" height="176"
                        style="border-radius: 14px; margin-right: 11px ;">
                    <div class="box-info1">
                        <div class="eval">
                            <span>4.0</span>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                        </div>
                        <p>
                            <span>Nội dung</span>
                            <span>5.0/5.0</span>
                        </p>
                        <p>
                            <span>Giọng đọc</span>
                            <span>3.0/5.0</span>
                        </p>
                    </div>
                </div>
                <div class="box-cmt y-cmt">
                    <h4>Đánh giá của bạn</h4>
                    {{!-- <p class="rating-group" id="rating-content">
                        <span>Nội dung</span>
                        <i class="fa-regular fa-star" data-value="1"></i>
                        <i class="fa-regular fa-star" data-value="2"></i>
                        <i class="fa-regular fa-star" data-value="3"></i>
                        <i class="fa-regular fa-star" data-value="4"></i>
                        <i class="fa-regular fa-star" data-value="5"></i>
                    </p>
                    <p class="rating-group" id="rating-voice">
                        <span>Giọng đọc</span>
                        <i class="fa-regular fa-star" data-value="1"></i>
                        <i class="fa-regular fa-star" data-value="2"></i>
                        <i class="fa-regular fa-star" data-value="3"></i>
                        <i class="fa-regular fa-star" data-value="4"></i>
                        <i class="fa-regular fa-star" data-value="5"></i>
                    </p> --}}
                    <input type="text" placeholder="Nhập nhận xét của bạn...">
                    <div class="box-temp2__footer">
                        <span id="add-review-btn" style="color: #2BA40080; margin-right: 17px;">Lưu</span>
                        <span id="remove-review-btn" style="color: #F9000080;">Bỏ</span>
                    </div>
                </div>
                <div class="box-com">
                    <h4>Đánh giá của độc giả khác</h4>
                    <ul class="list-eval" id="reviews-list" style="padding-left: 0;">

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>